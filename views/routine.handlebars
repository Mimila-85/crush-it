<h4 class="text-center">myRoutines</h4>
<div class="row text-center">
  <div class="input-group">
    <select class="custom-select col-auto rounded" style="height: 40px;" id="savedRoutine">
      <option selected>Choose...</option>
      {{#each routines}}
      <option value="{{id}}">{{name_routine}}</option>
      {{/each}}
    </select>
    <div class="input-group-append col-3">
      <a href="#" class="button btn rounded" id="goBtn" style="height: 40px;">GO</a>
    </div>
  </div>
</div>
<h5 class="text-center rounded">
  Create New Routine
</h5>
<div class="row">
  <div class="input-group">
    <select class="custom-select col-7 rounded dress" id="exercise">
      <option selected>Choose...</option>
      {{#each exercises}}
      <option>{{name}}</option>
      {{/each}}
    </select>
    <div class="col">
      <input type="text" class="form-control rounded" style="height: 40px;" placeholder="Sets" id="sets">
    </div>
    <div class="col">
      <input type="text" class="form-control rounded" style="height: 40px;" placeholder="Reps" id="reps">
    </div>
    <div class="col">
      <input type="text" class="form-control rounded" style="height: 40px;" placeholder="Weight" id="weight">
    </div>
  </div>

  <button type="submit" class="btn rounded" style="height: 40px;" id="addBtn">Add Exercise</button>

  <div class="results container-fluid align-bottom">
  </div>
  <div class="col-auto">
    <input type="text" class="form-control rounded" style="height: 40px;" placeholder="Name myRoutine"
      id="newRoutineName">
  </div>

  <div class="d-flex justify-content-center">
    <button type="submit" class="btn rounded" style="height: 40px;" id="newRoutine">Save myRoutine</button>
  </div>

